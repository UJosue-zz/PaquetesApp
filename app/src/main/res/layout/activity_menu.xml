<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="gt.kemik.paqueteria.Menu">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:titleTextColor="@color/colorTitle"
        >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/gt.kemik.paqueteria.menu.btnRecibir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:id="@+id/btnRecibir"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="@string/gt.kemik.paqueteria.menu.btnEntregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEntregar"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="@string/gt.kemik.paqueteria.menu.btnIntenar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnIntentar"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="@string/gt.kemik.paqueteria.menu.btnDevolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDevolver"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>
</LinearLayout>
